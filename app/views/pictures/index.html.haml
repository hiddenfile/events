.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Back", categories_path
      %li.active= link_to "Current", category_pictures_path
  .content
    .inner
      .content
        .inner
          %br
          - @pictures.each do |pic|
            = link_to category_picture_path(pic.category.title, pic.id) do
              %div{:style => "float:left;margin-right: 30px"}
                %p= "Like: #{pic.likes_count.to_i}"
                %p= "Comments: #{pic.comments_count.to_i}"
                %p= image_tag pic.image(:thumb)
          .clear
      = will_paginate @pictures
      .clear


